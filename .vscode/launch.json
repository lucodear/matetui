    "version": "0.2.0",
    "configurations": [
        // debug rust on windows
        {
            "name": "debug: matetui",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/examples/matetui.exe",
            "args": [
                "--example",
                "matetui"
            ],
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "cargo: build",
        },
        {
            "name": "debug: textarea",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/examples/widget_text_area.exe",
            "args": [
                "--example",
                "widget_text_area"
            ],
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "cargo: build",
        },
    ]
}